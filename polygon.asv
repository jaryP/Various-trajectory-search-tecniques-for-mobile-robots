classdef polygon
    properties 
        x
        y
    end
    methods
        
        function obj = polygon(x,y)
                obj.x = x;
                obj.y = y;
        end
        
        function [xi, yi] = intersect(obj,x,y)
            xi = [];
            yi = [];
            [xp, yp] = polyxpoly(x,y,obj.x,obj.y, 'unique');
            xi = [xi xp];
            yi = [yi yp];
            
            %In = [In; xp, yp];
            ins=inpolygon(x,y,obj.x,obj.y);
            %if(numel(x(ins)) > 0 || numel(y(ins)) > 0)
            disp(ins);
            xi = [xi x(ins)];
            yi = [yi y(ins)];
            
            %In = [In; x(ins), y(ins)];
            %end
            xi = In(:,1);
            yi = In(:,2);
        end
        
    end
end